<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FirstFragment">

    <Button
        android:id="@+id/btn_f_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_f_3"
        android:layout_marginTop="220dp"
        android:text="second fragment"
        />

    <Button
        android:id="@+id/btn_f_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="third fragment"
        app:layout_constraintBottom_toTopOf="@id/btn_f_4"
        app:layout_constraintTop_toBottomOf="@id/btn_f_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btn_f_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forth fragment"
        app:layout_constraintBottom_toTopOf="@id/btn_f_5"
        app:layout_constraintTop_toBottomOf="@id/btn_f_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btn_f_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fifth fragment"
        app:layout_constraintTop_toBottomOf="@id/btn_f_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/et_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btn_f_2"
        android:layout_marginHorizontal="54dp"
        android:hint="Text"


        />

</androidx.constraintlayout.widget.ConstraintLayout>